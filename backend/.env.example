# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/poorkidsdonation?retryWrites=true&w=majority
DB_NAME=poorkidsdonation

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@poorkidsdonation.org
EMAIL_FROM_NAME=Poor Kids Donation

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_NAME=poorkids-session

# Security
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES=3600000
EMAIL_VERIFICATION_EXPIRES=86400000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Payment Configuration
PAYMENT_SUCCESS_URL=http://localhost:3000/donation/success
PAYMENT_CANCEL_URL=http://localhost:3000/donation/cancel

# Admin Configuration
ADMIN_EMAIL=admin@poorkidsdonation.org
SUPER_ADMIN_EMAIL=superadmin@poorkidsdonation.org

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ID=your-analytics-id-here